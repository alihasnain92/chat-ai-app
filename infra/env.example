#############################################
# üåç AI Chat App - Environment Configuration
# -------------------------------------------
# Copy this file to `.env` in the appropriate directory
# and fill in the required values.
#
# Example:
#   cp infra/env.example server/.env
#
# Notes:
# - Never commit your real `.env` files.
# - Keep secrets (API keys, passwords) private.
#############################################


# ========================
# üîß Server Configuration
# ========================

# Application environment: "development" or "production"
NODE_ENV=development

# Port on which the backend server will run
PORT=4000

# Allowed frontend origin for CORS
# (Change this to your deployed frontend URL in production)
CORS_ORIGIN=http://localhost:5173

# Logging verbosity level: error | warn | info | debug
LOG_LEVEL=info


# ========================
# üóÑÔ∏è Database Configuration
# ========================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_chat


# ========================
# üîê Authentication
# ========================

# Secret key used to sign JWT tokens
# üëâ Generate a secure random string:
#    node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=changeme-super-secret-key


# ========================
# ü§ñ AI Integrations
# ========================

# OpenAI API key
# Get one at: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Claude (Anthropic) API key
# Get one at: https://console.anthropic.com/account/keys
CLAUDE_API_KEY=your-claude-api-key-here


# ========================
# ‚ö° Optional Services
# ========================

# Redis connection URL (used for socket scaling / caching)
# Example: redis://localhost:6379
REDIS_URL=

